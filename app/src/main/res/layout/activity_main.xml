<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="46dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/showcal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:enabled="false"
            android:inputType="numberDecimal"
            android:lines="2"
            android:textColor="#000000"
            android:maxLines="5"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@color/result_color"
            android:textSize="24sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearlayout">

        <Button
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/btn_a"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"
            android:layout_toEndOf="@id/a_minus"
            android:layout_toRightOf="@id/a_minus"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp" />

        <Button
            android:id="@+id/a_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="100dp"
            android:layout_marginStart="100dp"
            android:text="@string/btn_aminus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"/>

        <Button
            android:id="@+id/b_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="100dp"
            android:layout_marginRight="100dp"
            android:text="@string/btn_bplus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"
            android:layout_toStartOf="@id/backspace"
            android:layout_toLeftOf="@id/backspace" />

        <Button
            android:id="@+id/b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/a"
            android:layout_marginTop="10dp"
            android:text="@string/btn_b"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/calculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/c"
            android:text="@string/grade"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@color/grade_color"
            android:layout_toStartOf="@id/d_plus"
            android:layout_toLeftOf="@id/d_plus"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" />

        <Button
            android:id="@+id/b_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/a_minus"
            android:layout_alignLeft="@+id/a_minus"
            android:layout_alignTop="@id/b"
            android:text="@string/btn_bminus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"/>

        <Button
            android:id="@+id/c_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_plus"
            android:layout_alignLeft="@id/b_plus"
            android:layout_alignTop="@id/b"
            android:text="@string/btn_cplus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"/>

        <Button
            android:id="@+id/c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="115dp"
            android:text="@string/btn_c"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"/>

        <Button
            android:id="@+id/c_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/a_minus"
            android:layout_alignLeft="@id/a_minus"
            android:layout_alignTop="@+id/calculate"
            android:text="@string/btn_cminus"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"/>

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/b"
            android:text="@string/clear"
            android:background="@color/clear"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:textSize="30sp"
            android:textColor="@color/white"/>


        <Button
            android:id="@+id/d_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_plus"
            android:layout_alignLeft="@id/b_plus"
            android:layout_alignTop="@+id/calculate"
            android:text="@string/btn_dplus"
            android:background="@color/icons"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="145dp"
            android:text="@string/btn_d"
            android:background="@color/icons"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/a_minus"
            android:layout_alignLeft="@id/a_minus"
            android:layout_alignTop="@+id/d"
            android:text="@string/btn_e"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons"/>

        <Button
            android:id="@+id/fail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/b_plus"
            android:layout_alignLeft="@id/b_plus"
            android:layout_alignTop="@+id/d"
            android:text="@string/btn_f"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:background="@color/icons" />

        <Button
            android:id="@+id/backspace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="@color/back"
            android:text="<-"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" />

    </RelativeLayout>
</RelativeLayout>